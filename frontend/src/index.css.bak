@tailwind base;
@tailwind components;
@tailwind utilities;

/* app base styles */
html, body, #root { height: 100%; }
body { @apply bg-gray-50 text-gray-900; }
.container { @apply max-w-5xl mx-auto p-6; }
.login-container { @apply max-w-md mx-auto mt-12 bg-white p-6 rounded-md shadow; }
.dashboard { @apply grid grid-cols-[220px_1fr] gap-6; }
.dashboard nav { @apply bg-white p-4 rounded-md shadow-sm; }
.project-card, .skill-item, .education-item, .experience-item { @apply border border-gray-200 p-4 mb-4 bg-white rounded; }
.manage-skills form input, .manage-projects form input, .manage-education form input, .manage-experiences form input { @apply block mb-2 w-full p-2 border border-gray-300 rounded; }
button { @apply px-3 py-1.5 bg-indigo-600 text-white rounded; }
